<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.lmu.ifi.pixelfighter.activities.StatisticsActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stats"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/top_margin" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/img_width"
        android:layout_height="@dimen/img_height"
        app:srcCompat="@drawable/logo"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/statsScore"
        android:text="Score: "
        android:layout_marginTop="@dimen/top_margin"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/gamesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/top_margin"
        android:layout_marginTop="@dimen/space_margin"
        android:textSize="20sp"
        android:text="Games played: "/>

 <!--   <TextView
        android:id="@+id/wonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/top_margin"
        android:layout_marginTop="@dimen/space_margin"
        android:textSize="20sp"
        android:text="Games won: "/>-->

    <Button
        android:id="@+id/button_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/space_margin"
        android:text="@string/buttonReset" />


</LinearLayout>
