<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.lmu.ifi.pixelfighter">

    <application
        android:name=".DefaultApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.StatisticsActivity" />
        <activity android:name=".activities.GameDescActivity" />
        <activity android:name=".activities.MenuActivity" />
        <activity android:name=".activities.ChooseTeamActivity" />
        <activity android:name=".activities.GameActivity"></activity>
        <activity android:name=".activities.ZoomableGameActivity" />
        <activity android:name=".activities.GameActivity" />
        <activity android:name=".activities.GameEndActivity"></activity>
    </application>

</manifest>